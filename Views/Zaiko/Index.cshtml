@using Convenience.Models.DataModels
@model Convenience.Models.ViewModels.Zaiko.ZaikoViewModel
@{
    ViewData["Title"] = "Soko";
}
<h2>倉庫在庫検索</h2>

<div class="container">
    <div class="form-group">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col">
                <div class="row">
                    <div class="col-sm-1">
                        <p>ソート順位</p>
                    </div>
                    <div class="col-sm-3">
                        <label asp-for="@Model.KeyEventList.FirstOrDefault().KeyEventData" class="control-label"></label>
                    </div>
                    <div class="col-sm-1">
                        <label asp-for="@Model.KeyEventList.FirstOrDefault().Descending" class="control-label"></label>
                    </div>
                </div>

                @for (int i = 0; i < Model.KeyEventList.Count(); i++) {
                    <div class="row">
                        <div class="col-sm-1">
                            @(i + 1)
                        </div>
                        <div class="col-sm-3">
                            <select asp-for="@Model.KeyEventList[i].KeyEventData" asp-items="@Model.KeyList" class="control-label">
                                <option value="">-- 選択してください --</option>
                            </select>
                        </div>
                        <div class="col-sm-1">
                            <input asp-for="@Model.KeyEventList[i].Descending" type="checkbox" class="control-label" />
                        </div>
                    </div>
                }
            </div>
            <hr class="my-2 bg-primary"></hr>
            <div class="col">
                <div class="row">
                    <div class="col-sm-1">
                        <p>検索キー</p>
                    </div>
                    <div class="col-sm-3">
                        <label asp-for="@Model.SelecteWhereItemArray.FirstOrDefault().LeftSide" class="control-label"></label>
                    </div>
                    <div class="col-sm-1">
                        <label asp-for="@Model.SelecteWhereItemArray.FirstOrDefault().ComparisonOperator" class="control-label"></label>
                    </div>
                    <div class="col-sm-3">
                        <label asp-for="@Model.SelecteWhereItemArray.FirstOrDefault().RightSide" class="control-label"></label>
                    </div>
                </div>
                @for (int i = 0; i < Model.SelecteWhereItemArray.Count(); i++) {
                    <div class="row">
                        <div class="col-sm-1">
                            @(i + 1)
                        </div>
                        <div class="col-sm-3">
                            <select asp-for="@Model.SelecteWhereItemArray[i].LeftSide" asp-items="@Model.SelectWhereLeftSideList" class="control-label">
                                <option value="">-- 選択してください --</option>
                            </select>
                        </div>
                        <div class="col-sm-1">
                            <select asp-for="@Model.SelecteWhereItemArray[i].ComparisonOperator" asp-items="@Model.ComparisonOperatorList" class=" control-label">
                                <option value="==">=</option>
                            </select>
                        </div>
                        <div class="col-sm-3">
                            <input asp-for="@Model.SelecteWhereItemArray[i].RightSide" class="control-label" />
                        </div>
                    </div>

                }
            </div>
            <input type="submit" value="検索" class="btn btn-primary" /></input>
        </form>
    </div>

    <hr class="my-2 bg-primary"></hr>

    @if (Model.zaikoListLine != null && Model.zaikoListLine.Count() > 0) {
        <div class="list-group">
            <table>
                <thead>
                    <tr>
                        <th>
                            <label asp-for="@Model.zaikoListLine.FirstOrDefault().ShiireSakiId" class="control-label"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.zaikoListLine.FirstOrDefault().ShiirePrdId" class="control-label"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.zaikoListLine.FirstOrDefault().ShohinId" class="control-label"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.zaikoListLine.FirstOrDefault().ShohinName" class="control-label"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.zaikoListLine.FirstOrDefault().ChumonZan" class="control-label"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.zaikoListLine.FirstOrDefault().SokoZaikoCaseSu" class="control-label"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.zaikoListLine.FirstOrDefault().SokoZaikoSu" class="control-label"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.zaikoListLine.FirstOrDefault().LastShiireDate" class="control-label"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.zaikoListLine.FirstOrDefault().LastDeliveryDate" class="control-label"></label>
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @for (var i = 0; i < Model.zaikoListLine.Count; i++) {
                        <tr>
                            <td>
                                <input asp-for="@Model.zaikoListLine[i].ShiireSakiId" class="control-label"></input>
                            </td>
                            <td>
                                <input asp-for="@Model.zaikoListLine[i].ShiirePrdId" class="control-label"></input>
                            </td>
                            <td>
                                <input asp-for="@Model.zaikoListLine[i].ShohinId" class="control-label"></input>
                            </td>
                            <td>
                                <input asp-for="@Model.zaikoListLine[i].ShohinName" class="control-label"></input>
                            </td>
                            <td>
                                <input asp-for="@Model.zaikoListLine[i].ChumonZan" class="control-label"></input>
                            </td>
                            <td>
                                <input asp-for="@Model.zaikoListLine[i].SokoZaikoCaseSu" class="control-label"></input>
                            </td>
                            <td>
                                <input asp-for="@Model.zaikoListLine[i].SokoZaikoSu" class="control-label"></input>
                            </td>
                            <td>
                                <input asp-for="@Model.zaikoListLine[i].LastShiireDate" class="control-label"></input>
                            </td>
                            <td>
                                <input asp-for="@Model.zaikoListLine[i].LastDeliveryDate" class="control-label"></input>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
