@model Convenience.Models.ViewModels.TentoZaiko.TentoZaikoViewModel
@{
    ViewData["Title"] = "TentoZaiko";
}

<h2>店頭在庫</h2>

<div class="container">
    <div class="form-group">
        <h3>キー入力部</h3>
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-md-flex justify-content-between">
                <div class="col-md-6 mb-3">
                    <div class="row">
                        <div class="col-2 text-center">
                            <p>ソート順位</p>
                        </div>
                        <div class="col-4">
                            <label asp-for="@Model.KeyArea.KeyEventList.FirstOrDefault()!.KeyEventData" class="control-label"></label>
                        </div>
                        <div class="col-2 text-center">
                        </div>
                    </div>
                    @for (int i = 0; i < @Model.KeyArea.KeyEventList.Length; i++) {
                        <div class="col">
                            <select asp-for="@Model.KeyArea.KeyEventList[i].KeyEventData" asp-items="@Model.KeyArea.KeyList" class="form-control">
                                    <option value="">-- 選択してください --</option>
                            </select>
                        </div>
                        <div class="col-2 form-check form-switch text-center">
                            <input asp-for="@Model.KeyArea.KeyEventList[i].Descending" type="checkbox" class="form-check-input" />
                            <label asp-for="@Model.KeyArea.KeyEventList[i].Descending" class="form-check-label">降順</label>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
    @if ((Model.DataArea.TentoZaIkoLines?.Count()??0) > 0) {
        <div class="list-group">
            <table class="table table-striped table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>
                            <label asp-for="@Model.DataArea.TentoZaIkoLines!.FirstOrDefault()!.ShohinId" class="control-label"></label>
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in  Model.DataArea.TentoZaIkoLines!) {
                        <tr>
                            <td>
                                item.ShohinId
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

